msgstr "安装 Rancher"

#. type: Content of: <book><part><chapter><section><section><orderedlist><listitem><para>
#: l10n/source/edge.xml:110
msgid "Install a storage provider (optional)"
msgstr "安装存储服务提供程序（可选）"

#. type: Content of: <book><part><chapter><section><section><orderedlist><listitem><para>
#: l10n/source/edge.xml:111
msgid "Install the Metal<superscript>3</superscript> dependencies"
msgstr "安装 Metal<superscript>3</superscript> 依赖项"

#. type: Content of: <book><part><chapter><section><section><orderedlist><listitem><para>
#: l10n/source/edge.xml:112
msgid "Install CAPI dependencies via Rancher Turtles"
msgstr "通过 Rancher Turtles 安装 CAPI 依赖项"

#. type: Content of: <book><part><chapter><section><section><orderedlist><listitem><para>
#: l10n/source/edge.xml:113
msgid "Build a SLEMicro OS image for downstream cluster hosts"
msgstr "为下游群集主机构建 SLEMicro 操作系统映像"

#. type: Content of: <book><part><chapter><section><section><orderedlist><listitem><para>
#: l10n/source/edge.xml:114
msgid "Register BareMetalHost CRs to define the bare-metal inventory"
msgstr "注册 BareMetalHost CR 以定义裸机清单"

#. type: Content of: <book><part><chapter><section><section><orderedlist><listitem><para>
#: l10n/source/edge.xml:115
